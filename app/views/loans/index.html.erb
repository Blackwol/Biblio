<body>

    <%= render partial: "layouts/shared/navigation" %> 

    <div id="wrapper">

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                        <div class = "panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Livro</th>
                                            <th>Devolução</th> 
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            <% @loans.each do |loan| %>
                                                <tr>
                                                    <td><%=loan.book.title%></td>
                                                    <td><%=loan.return%></td>
                                                    <td>
                                                        <%= link_to loan, method: :delete, class: "btn btn-info" do %>
                                                                Devolver
                                                        <% end %>
                                                    </td>
                                                </tr>
                                            <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div> 
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

</body>

</html>